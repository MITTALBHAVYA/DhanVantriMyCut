<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hangingpage"
    tools:context=".UserAuthorisation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <View
            android:id="@+id/introScreen4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/singleleaf"
            android:layout_gravity="center"
            android:layout_marginTop="230dp"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome\nto"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhanvantri"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#005138"
            />


        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="32dp"
            android:hint="Mobile Number"
            android:inputType="number"
            android:background="@drawable/customedittext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:maxLength="10" /> <!-- Adjust max length as needed -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="or"
            android:textSize="15sp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Continue with Google"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:icon="@drawable/google"
            app:iconSize="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Continue with Github"
            app:icon="@drawable/github2"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:iconSize="20dp"/>

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:text="Continue"
            android:background="@drawable/custombutton"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</RelativeLayout>